    "react-tiny-popover": "^8.1.6",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@eslint/compat": "^1.1.1",
